{
  "name": "whatsapp-automation-electron",
  "version": "1.0.6",
  "description": "Electron UI for WhatsApp Automation Tool",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "electron"
  ],
  "author": "WhatsApp Automation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abenelazar/whatsapp-message-automator-node.git"
  },
  "build": {
    "appId": "com.whatsapp.automation",
    "productName": "WhatsApp Automation",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**\\node_modules\\**"
    ],
    "extraResources": [
      {
        "from": "../src",
        "to": "app/src",
        "filter": ["**/*"]
      },
      {
        "from": "../node_modules",
        "to": "app/node_modules",
        "filter": ["**/*"]
      },
      {
        "from": "../config.yaml",
        "to": "app/config.yaml"
      },
      {
        "from": "../contacts.csv",
        "to": "app/contacts.csv"
      },
      {
        "from": "../message_template.txt",
        "to": "app/message_template.txt"
      },
      {
        "from": "../package.json",
        "to": "app/package.json"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WhatsApp Automation",
      "differentialPackage": false
    },
    "compression": "normal",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    }
  },
  "dependencies": {
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  }
}
